<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.chequePrinter.controller.LogViewerController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <!-- Title and Controls -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Application Logs" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="logCountLabel" text="Loading logs..." style="-fx-text-fill: gray;"/>
            </HBox>
            
            <!-- Filters and Actions -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Level:"/>
                <ComboBox fx:id="levelFilter" prefWidth="100"/>
                
                <Label text="Search:"/>
                <TextField fx:id="searchField" promptText="Search logs..." prefWidth="200"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Button fx:id="refreshButton" text="Refresh" onAction="#refreshLogs" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button fx:id="copySelectedButton" text="Copy Selected" onAction="#copySelected" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Button fx:id="copyAllButton" text="Copy All" onAction="#copyAll" style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
                <Button fx:id="clearLogsButton" text="Clear Logs" onAction="#clearLogs" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <SplitPane orientation="VERTICAL" dividerPositions="0.7">
            <!-- Log Table -->
            <VBox>
                <Label text="Log Entries" style="-fx-font-weight: bold; -fx-padding: 5;"/>
                <TableView fx:id="logTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="timestampColumn" text="Timestamp" prefWidth="150" sortable="true"/>
                        <TableColumn fx:id="levelColumn" text="Level" prefWidth="80" sortable="true"/>
                        <TableColumn fx:id="loggerColumn" text="Logger" prefWidth="120" sortable="true"/>
                        <TableColumn fx:id="messageColumn" text="Message" prefWidth="400" sortable="false"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
            
            <!-- Details Area -->
            <VBox>
                <Label text="Log Details" style="-fx-font-weight: bold; -fx-padding: 5;"/>
                <TextArea fx:id="detailsArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" 
                         style="-fx-font-family: 'Courier New', monospace; -fx-font-size: 12;"
                         promptText="Select a log entry above to view details..."/>
            </VBox>
        </SplitPane>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f5f5f5;">
            <Label text="ðŸ’¡ Tip: Double-click a log entry to copy it to clipboard" style="-fx-text-fill: gray; -fx-font-size: 11;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Log files are saved to: logs/" style="-fx-text-fill: gray; -fx-font-size: 11;"/>
        </HBox>
    </bottom>
</BorderPane>